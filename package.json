{
  "name": "polys",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": {
    "name": "Kenji Lau",
    "email": "hello@kenji.sh",
    "url": "https://kenji.sh"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "examples/*",
      "packages/*"
    ],
    "catalog": {
      "viem": "^2.38.6"
    }
  },
  "scripts": {
    "dev:server": "bun run --filter='@dicedhq/polys-server' dev",
    "format": "biome format --write",
    "format:check": "biome format",
    "lint": "biome lint --write",
    "lint:check": "biome lint",
    "check": "biome check --write",
    "check:force": "biome check --write --unsafe",
    "check:types": "tsc --noEmit",
    "ci": "biome ci",
    "build": "bun run --filter='@dicedhq/gamma' build && bun run --filter='@dicedhq/clob' build && bun run --filter='@dicedhq/polymarket' build",
    "clean-up": "bun scripts/clean-up.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
