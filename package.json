{
  "name": "polys",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": {
    "name": "Kenji Lau",
    "email": "hello@kenji.sh",
    "url": "https://kenji.sh"
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "dev:server": "bun run --filter='@dicedhq/polys-server' dev",
    "format": "biome format --write",
    "format:check": "biome format",
    "lint": "biome lint --write",
    "lint:check": "biome lint",
    "check": "biome check --write",
    "check:force": "biome check --write --unsafe",
    "check:types": "tsc --noEmit",
    "ci": "biome ci",
    "build": "bun run --filter='@dicedhq/*' build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
